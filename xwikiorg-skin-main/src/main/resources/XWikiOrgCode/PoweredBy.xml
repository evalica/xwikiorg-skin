#set($discard = $xwiki.ssx.use('xwiki:XWikiOrgCode.PoweredBy'))
#**
* Creates the url for the first attachment of a document (filename, width, height). If there is no attachment, a default value is set.
*
* @param document The reference document.
* @param result The resulting url.
*###
#macro(getImageUrl $document $result)
  #set ($result = $util.null)
  #set ($imgWidth = "")
  #set ($imgHeight = "")
  #if ($document.attachmentList.size() &gt; 0)
    #set ($attach = $document.attachmentList.get(0))
    #setVariable ("$result" "$randomReferenceDoc.getExternalURL('download')/$escapetool.url($attach.filename)?$imgWidth&amp;$imgHeight")
  #else
    #set ($referenceSheet = $xwiki.getDocument('XWiki.ReferenceClassSheet'))
    #setVariable ("$result" "$referenceSheet.getExternalURL('download')/$escapetool.url($referenceSheet.attachmentList.get(0).filename)?$imgWidth&amp;$imgHeight")
  #end
#end
#set($referencesList = $xwiki.searchDocuments(", BaseObject as reference where doc.fullName=reference.name and reference.className='XWiki.ReferenceClass' and doc.fullName&lt;&gt;'XWiki.ReferenceClassTemplate' order by doc.title"))
#if($referencesList.size() &gt; 0)
  #set ($randomSeed = $mathtool.random(0, $referencesList.size()))
  #set($randomReferenceName = $referencesList.get($randomSeed))
  #set($randomReferenceDoc = $xwiki.getDocument($randomReferenceName))
  #set ($url = $randomReferenceDoc.getValue("URL").trim())
  #getImageUrl($randomReferenceDoc $imageUrl)
  #set($projectURL = $randomReferenceDoc.getURL())
  (% class='poweredBy' %)
  (((
   (% class='thumbnail'%)[[[[image:$imageUrl||alt="$randomReferenceDoc.getValue('Project')" class='img-thumbnail']]&gt;&gt;path:$projectURL]]
   #if ("$!url" != "") 
     (% class='website'%)((([[$randomReferenceDoc.getValue('Project')&gt;&gt;$url]])))
     (% class='author'%)(((by [[$randomReferenceDoc.getValue('Organization')&gt;&gt;$url]])))
    #else
     (% class='website'%)((($randomReferenceDoc.getValue('Project'))))
     (% class='author'%)(((by $randomReferenceDoc.getValue('Organization'))))
    #end
   (% class='description'%)((($randomReferenceDoc.getValue('Usage'))))
   (% class='more'%)[[more references {{html}}&amp;hellip;{{/html}}&gt;&gt;xwiki:References.WebHome]]
  )))
#else
(%class='noitems'%)(((No references)))
#end
{{comment}}
{{/cache}}
{{/comment}}
{{/velocity}}</code>
